    <destinatarios>
        <destinatario>destinatario1@example.com</destinatario>
        <destinatario>destinatario2@example.com</destinatario>
    </destinatarios>
    <fecha>
        <dia>12</dia>
        <mes>03</mes>
        <anio>2025</anio>
    </fecha>
    <asunto>Ejemplo de correo en XML</asunto>
    <mensaje>
        <h2>Encabezado del mensaje</h2>
        <p>Este es un <strong>ejemplo</strong> de mensaje en XML.</p>
