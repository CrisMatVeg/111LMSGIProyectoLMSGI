        <fichero>
            <nombre>documento.pdf</nombre>
            <tipo>application/pdf</tipo>
        </fichero>
        <fichero>
            <nombre>imagen.jpg</nombre>
            <tipo>image/jpeg</tipo>
        </fichero>
    </ficheros_adjuntos>
